<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomAppBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- List item title display -->
    <style name="ListTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <!-- List item section and author display -->
    <style name="ListDetailsStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <!-- List item date display -->
    <style name="ListDetailsStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDetailText</item>
    </style>
</resources>
