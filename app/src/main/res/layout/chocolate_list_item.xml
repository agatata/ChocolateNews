<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/customPadding"
    android:paddingRight="@dimen/customPadding"
    android:paddingTop="@dimen/halfPadding">

    <TextView
        android:id="@+id/title_text_view"
        style="@style/ListTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/halfPadding"
        tools:text="This is the article's title, which can be much longer as expected and then we are going to need to test the ellipsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/halfPadding">

        <TextView
            android:id="@+id/section_text_view"
            style="@style/ListSectionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Life style" />

        <TextView
            android:id="@+id/date_text_view"
            style="@style/ListDetailsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="20.07.2016" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>